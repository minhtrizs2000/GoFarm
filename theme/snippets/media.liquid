{% case media.media_type %}
  {% when 'image' %}
      {{ media | image_url: width: width, height: height | image_tag }}
    </div>
  {% when 'external_video' %}
      {{ media | external_video_tag }}
  {% when 'video' %}
      {{ media | video_tag: controls: true }}
  {% when 'model' %}
      {{ media | model_viewer_tag }}
  {% else %}
      {{ media | media_tag }}
{% endcase %}