{%- style -%}

{%- endstyle -%}

{%- liquid
    assign logoSVG = section.settings.logo_svg
    assign logo_img = section.settings.logo_picker
-%}

{% javascript %} 
    $(function() {
        $("#language-select").select2(
            {
                minimumResultsForSearch: Infinity,
                width: '100%'
            }
        );

        $("#currency-select").select2(
            {
                minimumResultsForSearch: Infinity,
                width: '100%'
            }
        );
    });
{% endjavascript %}

<div data-section-type="header" data-section-id="{{section.id}}">
  <div class="section-container">
    <div class="header-top">
        <div class="header-top__logo">
           <a href="{{ shop.url }}">
                {% if logoSVG != blank %}
                    {{ logoSVG }}
                {% else %}
                    {% if logo_img != blank %}
                         <img src="{{ logo_img | img_url: '153x34' }}" /> 
                    {% endif %}
                {% endif %}
           </a>
        </div>
        <div class="header-top__products">
            <i class="fa-solid fa-bars"></i>
            
            <div class="header-top__title">
                Products
            </div>
        </div>
        <div class="header-top__search">
            <input type="search" id="header-top__search" name="header-top__search" placeholder="Search for products...">
