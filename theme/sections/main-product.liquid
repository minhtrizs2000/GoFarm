<script src="{{ 'variant-handle.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'qty-input-handle.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'product-form-handle.js' | asset_url }}" defer="defer"></script>
