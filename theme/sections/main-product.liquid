                                            {{ form | payment_button }}
                                        {%- endif -%}
                                    {%- endcomment -%}    
                                  </div>
                                {%- endform -%}
                            </product-form>
                        </div>
                        
                        <div class="product-text-link">
                            <div class="product-wishlist"><p>Add to wishlist</p></div>
                            <div class="product-compare"><p>Add to compare</p></div>
                        </div>
                    </div>
                    <div class="product-add-more">
