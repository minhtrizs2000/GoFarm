{% schema %}
    {
    "name": "Main Product",
    "tag": "section",
    "settings": [
        {
            "type": "select",
            "id": "thumbnail_position",
            "label": "Thumbnail position",
            "options": [
                {
                    "value": "left",
                    "label": "Left"
                },
                {
                    "value": "bottom",
                    "label": "Bottom"
                }
            ],
            "default": "left"
        },
        {
            "type": "range",
            "id": "thumbnails_to_show",
            "min": 1,
            "max": 5,
            "step": 1,
            "default": 3,
            "label": "Maximum thumbnail images to show"
        }
    ],
    "presets": [
        {
            "name": "Main Product"
        }
    ]
}
{% endschema %}
