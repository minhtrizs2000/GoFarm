{% assign thumb_pos = section.settings.thumbnail_position %}
{% assign thumb_show = section.settings.thumbnails_to_show %}
{%- assign product_form_id = 'product-form-' | append: section.id -%}

<div class="section-container" data-section-type="main-product" data-section-id="{{section.id}}">
    <div class="product-container {% if thumb_pos == 'left' %}thumbnail-left{% endif %}">
        <div class="product-slider">
            <div class="slider" id="slider-{{section.id}}">
                {% for media in product.media %}
                    <div class="slider-item">
                        <div class="slider-item-inner" id="slider-media-{{section.id}}">
                            {{ media | image_url: width: 380, height: 380 | image_tag }}
                        </div>
                    </div>
                {% endfor %}
            </div>
            <ul class="product-thumbnails" id="nav-container-{{section.id}}">
                {% for media in product.media limit: thumb_show %}
                    {% if forloop.first %}
                        <li class="active">
                            {{ media | image_url: width: 73, height: 73 | image_tag }}
                        </li>
                    {% else %}
                        <li>
                            {{ media | image_url: width: 73, height: 73 | image_tag }}
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>
            
        </div>

        <div class="product-info">
            <div class="product-brand-name">{{ product.vendor }}</div>
            <h3 class="product-name" id="title-{{section.id}}">   
                {{- product.title }} - {% if product.selected_variant -%} {{- product.selected_variant.title -}}{%- else -%}{{- product.variants[0].title -}}{%- endif -%}
            </h3>
            <div class="product-rating">
                <div class="product-star">
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                </div>
                <span class="product-review">(4 Reviews)</span>
            </div>
            <ul class="product-service">
                <li>
                    <img src="{{ 'image_2022-06-01_110837947.png' | file_url }}" />
                    <span>Free delivery for all orders</span>
                </li>
                <li>
                    <img src="{{ 'image_2022-06-01_110905205.png' | file_url }}" />
                    <span>Only fresh foods</span>
                </li>
                <li>
                    <img src="{{ 'clock_1.png' | file_url }}" />
                    <span>25/7 delivery service</span>
                </li>
            </ul>
            <div class="product-social-icon">
                <a href="#" class="icon-facebook">
                    <i class="fa-brands fa-facebook-f"></i>
                </a>
                <a href="#" class="icon-twitter">  
                    <i class="fa-brands fa-twitter"></i>
                </a>
                
                <a href="#" class="icon-pinterest">
                    <i class="fa-brands fa-pinterest"></i>
                </a>
                <a href="#" class="icon-share">
                    <i class="fa-solid fa-share-nodes"></i>
                </a>
            </div>

            {% if thumb_pos == 'bottom' %}
                <div class="product-price" id="price-{{section.id}}">
                    {%- render 'price', product: product, use_variant: true, show_badges: false -%}
                </div>
               
                {%- unless product.has_only_default_variant -%}
                    {%- render 'variant-radios', section: section, product: product -%}
                {%- endunless -%}
              
                <div class="product-order">
                    <div class="stock-count">
                        <span>Quantity</span>
                        <span class="stock-number" id="stock-{{section.id}}">Only {{ product.selected_or_first_available_variant.inventory_quantity }} left in stock!</span>
                    </div>

                    <div class="qty-btn-wrapper">
                        <div class="qty-btn-inner">
                            <quantity-input class="quantity">
                                <button class="quantity__button" name="minus" type="button">
                                  <span class="visually-hidden">{{ 'products.product.quantity.decrease' | t: product: product.title | escape }}</span>
                                  {% render 'icon-minus' %}
                                </button>
                                <input class="quantity__input"
                                    type="number"
                                    name="quantity"
                                    id="Quantity-{{ section.id }}"
                                    min="1"
                                    value="1"
                                    form="{{ product_form_id }}"
                                  >
                                <button class="quantity__button" name="plus" type="button">
                                  <span class="visually-hidden">{{ 'products.product.quantity.increase' | t: product: product.title | escape }}</span>
                                  {% render 'icon-plus' %}
                                </button>
                            </quantity-input>
        
                            <product-form class="product-form">
